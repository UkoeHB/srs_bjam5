{
"#import": {
    "constants.caf.json": ""
},

"#constants": {
    "$mob_animation_imp": "sprites/mob_imp_50_50.png",
    "$mob_size_imp": {"x": 50, "y": 50},

    "$mob_animation_dark_mage": "sprites/mob_dark_mage.png",
    "$mob_size_dark_mage": {"x": 35, "y": 35},
    "$projectile_animation_dark_mage": "sprites/mob_dark_mage.png",
    "$projectile_size_dark_mage": {"x": 20, "y": 20},
    
    "$mob_animation_slime": "sprites/mob_slime_40_40.png",
    "$mob_size_slime": {"x": 40, "y": 40},

    "$mob_animation_bomb": "sprites/mob_bomb.png",
    "$mob_size_bomb": {"x": 40, "y": 40},

    "$mob_bomb_explosion_animation": "sprites/explosion_anim.png",
    "$mob_bomb_explosion_size": {"x": 40, "y": 40},

    "$mob_animation_balloon": "sprites/mob_balloon.png",
    "$mob_size_balloon": {"x": 16, "y": 28}
},

"#commands": {
    "LoadSpriteAnimations": [[
        {
            "name": "mob_imp",
            "image": "$mob_animation_imp",
            "size": "$mob_size_imp",
            "columns": 2,
            "rows": 1,
            "frame_time": 415,
            "clips": [{"frames": {"Row": 0}}]
        },
        {
            "name": "mob_dark_mage",
            "image": "$mob_animation_dark_mage",
            "size": "$mob_size_dark_mage",
            "columns": 2,
            "rows": 1,
            "frame_time": 100,
            "clips": [{"frames": {"Frames": [0, 1]}}]
        },
        {
            "name": "projectile_dark_mage",
            "image": "$projectile_animation_dark_mage",
            "size": "$projectile_size_dark_mage",
            "padding": {"x": 15, "y": 15},
            "columns": 5,
            "rows": 1,
            "frame_time": 150,
            "clips": [{"frames": {"Frames": [2, 3, 4, 3]}}]
        },
        {
            "name": "projectile_dissipate_dark_mage",
            "image": "$projectile_animation_dark_mage",
            "size": "$projectile_size_dark_mage",
            "padding": {"x": 15, "y": 15},
            "columns": 7,
            "rows": 1,
            "frame_time": 75,
            "loops": 1,
            "clips": [{"frames": {"Frames": [5, 6]}}]
        },
        {
            "name": "mob_slime",
            "image": "$mob_animation_slime",
            "size": "$mob_size_slime",
            "columns": 4,
            "rows": 1,
            "frame_time": 175,
            "clips": [{"frames": {"Row": 0}}]
        },
        {
            "name": "mob_bomb",
            "image": "$mob_animation_bomb",
            "size": "$mob_size_bomb",
            "columns": 2,
            "rows": 1,
            "frame_time": 150,
            "clips": [{"frames": {"Row": 0}}]
        },
        {
            "name": "mob_bomb_explosion",
            "image": "$mob_bomb_explosion_animation",
            "size": "$mob_bomb_explosion_size",
            "columns": 4,
            "rows": 1,
            "frame_time": 100,
            "clips": [{"frames": {"Row": 0}}]
        },
        {
            "name": "mob_balloon",
            "image": "$mob_animation_balloon",
            "size": "$mob_size_balloon",
            "columns": 1,
            "rows": 1,
            "frame_time": 100,
            "clips": [{"frames": {"Row": 0}}]
        }
    ]],

    "MobDatabase": [{
        "mob_imp": {
            "animation": "mob_imp",
            "hitbox": "$mob_size_imp",
            "base_health": 10,
            "base_armor": 1,
            "base_speed_tps": 80.0,
            "mob_type": {"Collider": {"base_damage": 2, "base_cooldown_millis": 1000}},
            "drops": [
                [0.2, [[{"Exp": 1}]]]
            ]
        },
        "mob_slime": {
            "animation": "mob_slime",
            "hitbox": "$mob_size_slime",
            "base_health": 10,
            "base_armor": 1,
            "base_speed_tps": 50.0,
            "mob_type": {"Collider": {"base_damage": 10, "base_cooldown_millis": 500}},
            "drops": [
                [0.4, [[{"Exp": 1}]]],
                [0.01, [[{"Exp": 10}]]]
            ]
        },
        "mob_dark_mage": {
            "animation": "mob_dark_mage",
            "hitbox": "$mob_size_dark_mage",
            "base_health": 10,
            "base_armor": 1,
            "base_speed_tps": 40.0,
            "mob_type": {
                "Emitter": {
                    "base_fire_range": 300.0,
                    "base_cooldown_millis": 1000,
                    "projectile": {
                        "projectile_type": {"SingleUse": {"damage": 10}},
                        "velocity_tps": 70.0,
                        "animation": "projectile_dark_mage",
                        "size": "$projectile_size_dark_mage",
                        "effect_animation": "projectile_dissipate_dark_mage"
                    }
                }
            },
            "drops": [
                [0.2, [[{"Exp": 1}]]],
                [0.4, [[{"Exp": 4}]]],
                [0.01, [[{"Exp": 10}]]]
            ]
        },
        "mob_bomb": {
            "animation": "mob_bomb",
            "hitbox": "$mob_size_bomb",
            "base_health": 10,
            "base_armor": 1,
            "base_speed_tps": 60.0,
            "mob_type": {"OnDeath": {"Explode": {"base_damage": 40, "base_range": 50, "explosion_animation": "mob_bomb_explosion"}}},
            "drops": [
                [0.4, [[{"Exp": 2}]]],
                [0.01, [[{"Exp": 10}]]]
            ]
        },
        "mob_balloon": {
            "animation": "mob_balloon",
            "hitbox": "$mob_size_balloon",
            "base_health": 5,
            "base_armor": 1,
            "base_speed_tps": 40.0,
            "mob_type": {"Collider": {"base_damage": 0, "base_cooldown_millis": 500}}
        }
    }]
}
}
