{
"#import": {
    "constants.caf.json": ""
},

"scene": {
    "FlexStyle": {
        "dims": {"width": {"Vw": 100.0}, "height": {"Vh": 100.0}},
        "content": {
            "flex_direction": "Column",
            "justify_main": "Center",
            "justify_cross": "Center"
        }
    },

    "header": {
        "FlexStyle": {
            "dims": {"width": {"Percent": 100.0}},
            "content": {
                "flex_direction": "Row",
                "justify_main": "Center",
                "justify_cross": "FlexStart"
            }
        },

        "day": {
            "AbsoluteStyle": {
                "dims": {
                    "width": {"Percent": 100.0},
                    "height": {"Percent": 100.0},
                    "top": "Auto",
                    "bottom": "Auto",
                    "left": "Auto",
                    "right": "Auto"
                },
                "content": {"justify_main": "FlexStart", "justify_cross": "FlexStart"}
            },

            "text": {
                "TextLine": {}
            }
        },

        "clock": {
            "TextLine": {}
        },

        "karma": {
            "AbsoluteStyle": {
                "dims": {
                    "width": {"Percent": 100.0},
                    "height": {"Percent": 100.0},
                    "top": "Auto",
                    "bottom": "Auto",
                    "left": "Auto",
                    "right": "Auto"
                },
                "content": {"justify_main": "FlexEnd", "justify_cross": "FlexStart"}
            },

            "text": {
                "TextLine": {}
            }
        }
    },

    "fill": {
        "FlexStyle": {"flex": {"flex_grow": 1.0}}
    }
}
}
